class Solution {
    public boolean isHappy(int n) {
        HashSet<Integer> set  = new HashSet<>();
        int sum =0;
        
        while(n!=1){
            if(set.contains(n)){
                return false;
            }
            set.add(n);
            
            int num =n;
            while(num!=0){
                int digit = num%10;
                sum += Math.pow(digit,2);
                num /=10;
            }
            n=sum;
            sum =0;
        }
        return true;

    }
}
