class Solution {
    public int maxDepth(String s) {
        int n = s.length();
        
        int cnt =0;
        int maxCount =0;
        for(int i=0;i<n;i++){
            char ch = s.charAt(i);
            
            if(ch == '('){
                cnt++;
            }else if(ch ==')'){
                cnt--;
            }
            maxCount = Math.max(maxCount,cnt);
        }
        return maxCount;
    }
}
