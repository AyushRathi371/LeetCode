class Solution {
    public int[] twoSum(int[] nums, int target) {
        Map<Integer,Integer> map = new HashMap<>();
        int n = nums.length;
        int[] arr = new int[2];
        int j=0;
        for(int i=0;i<n;i++){
            int x= target- nums[i];

            if(map.containsKey(x)){
                arr[j++]= map.get(x);
                arr[j]=i;
                break;
            }
            if(!map.containsKey(x)){
                map.put(nums[i],i);
            }

        }return arr;
    }
}
