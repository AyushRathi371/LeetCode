class Solution {
    public int maxProduct(int[] nums) {
        int n =nums.length;
        int max =Integer.MIN_VALUE;
        int num=0;
        int prefix=1;
        int suffix=1;
        for(int i=0;i<n;i++){
            if(suffix==0) suffix=1;
            if(prefix==0) prefix=1;

            prefix *=nums[i];
            suffix *=nums[n-1-i];

            num = Math.max(prefix,suffix);
            max =Math.max(max,num);
        }
        return max;
    }
}
