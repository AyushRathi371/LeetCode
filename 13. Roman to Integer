class Solution {
    public int romanToInt(String s) {
        int n = s.length();

        int result =0;
        for(int i=0;i<n;i++){
            char ch =s.charAt(i);
            
            if(ch=='M'){
                result +=1000;
            }else if(ch == 'D'){
                  result +=500;
            }else if(ch == 'C'){
                if((i!=n-1)&& (s.charAt(i+1)=='D'||s.charAt(i+1) =='M') ){
                    result -=100;
                }else{
                    result +=100;
                }
            }else if(ch == 'L'){
                result +=50;
            }else if(ch == 'X'){
                if((i!=n-1) && (s.charAt(i+1)=='C'||s.charAt(i+1) =='L') ){
                    result -=10;
                }
                else{
                    result +=10;
                }
            }else if(ch =='V'){
                result +=5;
            }else if(ch =='I'){
                if((i!=n-1)&& (s.charAt(i+1)=='X'||s.charAt(i+1) =='V')){
                    result -=1;
                }else{ 
                    result +=1;
                }
            }
            
        }
        return result;
    }
}
