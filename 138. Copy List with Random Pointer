/*
// Definition for a Node.
class Node {
    int val;
    Node next;
    Node random;

    public Node(int val) {
        this.val = val;
        this.next = null;
        this.random = null;
    }
}
*/

class Solution {
    public Node copyRandomList(Node head) {
        Node temp = head;
        Node dummy =new Node(-1);
        Node t = dummy;
        HashMap<Node,Node> map = new HashMap<>(); 
        while(temp !=null){
            Node x = new Node(temp.val);
            t.next = x;
            map.put(temp,x);
            t = x;
            temp = temp.next;
        }
        temp = head;
        
        t=dummy.next;

        while(temp !=null){
            if(temp.random ==null){
                t.random = null;
            }else{
                Node x = temp.random;
                
                t.random = map.get(x);
                
            }
            temp = temp.next;
            t = t.next;
        }

    return dummy.next;
    }
}
