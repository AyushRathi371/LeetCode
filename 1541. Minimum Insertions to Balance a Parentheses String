class Solution {
    public int minInsertions(String s) {
        int res  =0;
        int need =0;
        for(char ch : s.toCharArray()){
            if(ch =='('){
                need +=2;
                if(need%2==1){
                    need--;
                    res++;
                }
            }else{
                need--;
                if(need<0){
                    res++;
                    need =1;
                }
            }
        }
        return need + res;
    }
}
